<div class="form-group row">
  <label class="col-form-label col-sm-2" for="Date">Date :</label>
  <div class="col-sm-8">
    <input autofocus  type="date" class="form-control" name="date" value="<%= dispo.date %>" min="<%= dispo.now %>" required>
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="Horaire">Horaire :</label>
  <div class="col-sm-7">
    <label>Matin (8h à 12h)</label>
    <input type="radio" class="checkbox checkbox-primary" name="heure" value="AM" <%= dispo.radioAM %> />
    <label>Apres-midi (14h à 18h)</label>
    <input type="radio" class="checkbox checkbox-primary" name="heure" value="PM" <%= dispo.radioPM %> />
  </div>
</div>
